atmel {
	parameters {
		gprs 32;
	}

	registers {
		SREG; /* Status register */
	}

	instructions {
		/* Add with Carry */
		adc opcode="0001 11rd dddd rrrr" [clock=1, size=1] Rd, Rr {
			Rd = Rd + Rr + C;

			H = Rd3 & Rr3 + Rr3 & !R3 + !R3 & d3;
			S = N ^ V;
			V = Rd7 & Rr7 &  !R7 + !Rd7 & !Rr7 & R7;
			N = R7;
			Z = !R7 & !R6 & !R5 & !R4 & !R3 & !R2 & !R1 & !R0;
			C = Rd7 & Rr7 + Rr7 & !R7 + !R7 & Rd7;

			PC = PC + 1;
		}
	}
}
