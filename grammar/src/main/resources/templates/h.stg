group h;

header(parameters, registers) ::= <<
#include \<stdint.h\>

// Parameters
<parameters; separator="\n">

// Maps
<maps; separator="\n">

// Registers
#define PC_OFFSET PC
#define SIZEOF_PC 2
<registers; separator="\n">
>>

opcode_size(bits) ::= <<
#define OPCODE_TYPE uint<bits>_t
>>

map(type, begin, end) ::= <<
#define <type>_OFFSET <begin>
#define <type>_END <end>
#define SIZEOF_<type> 1
>>

register(name, offset) ::= <<
#define <name> <offset>
>>
